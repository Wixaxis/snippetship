<h1 class="text-center align-middle p-3 w-auto">Welcome home, <%= current_user&.name %>!</h1>
<div class="rounded w-100 mx-auto d-flex flex-column" style="height:calc(100vh - 220px)">
  <div class="m-3 border border-light rounded h-100">
    <h2 class="m-3">Subscribed projects</h2>
    <table class="table table-dark table-striped w-100 mx-auto">
      <thead>
        <tr>
          <th></th>
          <th scope="col">Name</th>
          <th scope="col">Folder path</th>
          <th scope="col">Users</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% current_user.projects.each do |p| %>
          <%= render partial: "projects/project_element", locals: { project: p } %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="m-3 border border-light rounded h-100">
    <h2 class="m-3">Tools in usage</h2>
    <table class="table table-dark table-striped w-100 mx-auto">
      <thead>
        <tr>
          <th></th>
          <th scope="col">Name</th>
          <th scope="col">CLI name</th>
          <th scope="col">Users</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% current_user.tools.each do |t| %>
          <%= render partial: "tools/tool_element", locals: { tool: t } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
